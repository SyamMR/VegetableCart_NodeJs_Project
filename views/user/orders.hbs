<section>
    <div class="container pt-5 mt-3">
        <table class="table mt-5" id="productsTable">
  <thead>
    <tr>
      <th scope="col">Date</th>
      <th scope="col">Address</th>
      <th scope="col">Pincode</th>
      <th scope="col">Mobile</th>
      <th scope="col">Account</th>
      <th scope="col">Payment</th>
      <th scope="col">Status</th>
      <th scope="col">option</th
    </tr>
  </thead>
  <tbody>
    {{#each orders}}
    <tr>
      <td>{{this.date}}</td>
      <td>{{this.deliveryDetails.address}}</td>
      <td>{{this.deliveryDetails.pincode}}</td>
      <td>{{this.deliveryDetails.mobile}}</td>
      <td>{{this.totalAmount}}.00</td>
      <td>{{this.paymentMethod}}</td>
      <td>{{this.status}}</td>
      <td>
        <a href="/view-order-products/{{this._id}}" class="btn btn-success">View Products</a>
        </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>
