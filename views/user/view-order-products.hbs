<section>
    <div class="container mt-5 pt-3">
        <div class="row">
             {{#each products}}
                <div class="col-md-3 p-3">
                    <div class="card" style="width: 15rem; height:15rem">
                        <img class="card-img-top ml-5 " src="/product-images/{{this.product._id}}.jpg" alt="Card image cap"
                        style="height: 150px; width:100px">
                        <div class="card-body">
                            <h5 class="card-title">{{this.product.Name}}</h5>
                           
                            <p class="card-text">Quantity:{{this.quantity}}.Kg</p>
                            <p class="card-text">{{this.Description}}</p>
                        </div>
                    </div>
                </div>
                {{/each}}  
        </div>
    </div>
</section>